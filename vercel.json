{
  "version": 2,
  "name": "medcontrol",
  "buildCommand": "cd frontend-morbilidad && npm install && npm run build",
  "outputDirectory": "frontend-morbilidad/build",
  "functions": {
    "backend-api/server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend-api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend-morbilidad/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
